<Window x:Class="BatchRename.RuleAndOneParam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        Title="Change Rule" Height="200" Width="300">
    <Canvas>
        <TextBlock Text="{Binding NameRule}" Height="20" Width="300" TextAlignment="Center" Canvas.Top="20" FontWeight="DemiBold"/>
        <Label Content="Parameters: " FontSize="10" Canvas.Left="-1" Canvas.Top="54" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.265,0.508" />
        <TextBox Text="{Binding Param}" Width="200" Canvas.Left="68" Canvas.Top="57" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Button Name="edit" Content="Edit" Width="40" Height="20" IsDefault="True" Click="edit_Click" Canvas.Left="214" Canvas.Top="110" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Button Name="cancel" Content="Cancel" Width="40" Height="20" IsDefault="True" Click="cancel_Click" Canvas.Left="52" Canvas.Top="110" />
    </Canvas>
</Window>
